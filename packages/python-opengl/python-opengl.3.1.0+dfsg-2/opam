  ["sh" "-c" "sudo dpkg -r python-opengl"]
]
depends: [
  "freeglut3"
  "python-any" {< "2.8"}
  "python-any" {>= "2.7~"}
  ("libgl1-mesa-glx" | "libgl1")
  ("libglu1-mesa" | "libglu1")
  ("python" | "python2")
]
extra-source "python-opengl_3.1.0+dfsg-2_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/p/pyopengl/python-opengl_3.1.0+dfsg-2_all.deb"
