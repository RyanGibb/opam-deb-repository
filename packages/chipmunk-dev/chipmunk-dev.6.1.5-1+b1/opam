  "freeglut3"
  "libc6" {>= "2.14"}
  "libchipmunk0d3" {= "6.1.5-1+b1"}
  ("libgl1-mesa-glx" | "libgl1")
  ("libglu1-mesa" | "libglu1")
]
extra-source "chipmunk-dev_6.1.5-1+b1_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/c/chipmunk/chipmunk-dev_6.1.5-1+b1_amd64.deb"
}
