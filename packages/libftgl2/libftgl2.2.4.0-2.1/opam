opam-version: "2.0"
build: [
  ["sh" "-c" "sudo dpkg -i libftgl2_2.4.0-2.1_amd64.deb"]
]
remove: [
  ["sh" "-c" "sudo dpkg -r libftgl2"]
]
depends: [
  "libc6" {>= "2.14"}
  "libfreetype6" {>= "2.2.1"}
  "libgcc-s1" {>= "3.0"}
  "libgl1"
  "libstdc++6" {>= "5"}
  ("libglu1-mesa" | "libglu1")
]
extra-source "libftgl2_2.4.0-2.1_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/f/ftgl/libftgl2_2.4.0-2.1_amd64.deb"
}
