opam-version: "2.0"
build: [
  ["sh" "-c" "sudo dpkg -i freeglut3-dev_2.8.1-3_amd64.deb"]
]
remove: [
  ["sh" "-c" "sudo dpkg -r freeglut3-dev"]
]
depends: [
  "freeglut3" {= "2.8.1-3"}
  "libxext-dev"
  "libxt-dev"
  ("libgl1-mesa-dev" | "libgl-dev")
  ("libglu1-mesa-dev" | "libglu-dev")
]
extra-source "freeglut3-dev_2.8.1-3_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/f/freeglut/freeglut3-dev_2.8.1-3_amd64.deb"
}
