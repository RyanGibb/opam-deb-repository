  "libx11-6"
  "libxcursor1" {> "1.1.2"}
  "libxinerama1"
  "libxrandr2" {>= "2-1.2.99.3"}
  "libxxf86vm1"
  ("libgl1-mesa-glx" | "libgl1")
]
