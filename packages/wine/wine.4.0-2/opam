opam-version: "2.0"
build: [
  ["sh" "-c" "sudo dpkg -i wine_4.0-2_amd64.deb"]
]
remove: [
  ["sh" "-c" "sudo dpkg -r wine"]
]
depends: [
  ("wine64" {< "4.0-2.1~"} | "wine32" {< "4.0-2.1~"})
  ("wine64" {>= "4.0-2"} | "wine32" {>= "4.0-2"})
]
extra-source "wine_4.0-2_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/w/wine/wine_4.0-2_all.deb"
}
