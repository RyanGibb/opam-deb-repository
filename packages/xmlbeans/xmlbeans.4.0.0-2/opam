  "libxmlbeans-java" {>= "4.0.0-2"}
  ("default-jre-headless" | "java2-runtime-headless")
]
extra-source "xmlbeans_4.0.0-2_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/x/xmlbeans/xmlbeans_4.0.0-2_all.deb"
}
