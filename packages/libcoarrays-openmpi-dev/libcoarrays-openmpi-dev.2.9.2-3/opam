opam-version: "2.0"
build: [
  ["sh" "-c" "sudo dpkg -i libcoarrays-openmpi-dev_2.9.2-3_amd64.deb"]
]
remove: [
  ["sh" "-c" "sudo dpkg -r libcoarrays-openmpi-dev"]
]
depends: [
  "libc6" {>= "2.14"}
  "libcaf-openmpi-3" {= "2.9.2-3"}
  "libcoarrays-dev"
  "libgfortran5" {>= "10"}
  "libopenmpi3" {>= "4.1.0"}
  "openmpi-bin"
  ("gfortran" | "fortran-compiler")
]
extra-source "libcoarrays-openmpi-dev_2.9.2-3_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/o/open-coarrays/libcoarrays-openmpi-dev_2.9.2-3_amd64.deb"
}
