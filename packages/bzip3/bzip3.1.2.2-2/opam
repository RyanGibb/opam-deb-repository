opam-version: "2.0"
build: [
  ["sh" "-c" "sudo dpkg -i bzip3_1.2.2-2_amd64.deb"]
]
remove: [
  ["sh" "-c" "sudo dpkg -r bzip3"]
]
depends: [
  "libbzip3-0" {= "1.2.2-2"}
  "libc6" {>= "2.34"}
]
extra-source "bzip3_1.2.2-2_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/b/bzip3/bzip3_1.2.2-2_amd64.deb"
}
