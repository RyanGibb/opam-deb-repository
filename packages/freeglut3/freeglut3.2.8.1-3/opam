  "libc6" {>= "2.17"}
  "libx11-6" {>= "2-1.2.99.901"}
  "libxext6"
  "libxi6" {>= "2-1.2.99.4"}
  "libxxf86vm1"
  ("libgl1-mesa-glx" | "libgl1")
]
extra-source "freeglut3_2.8.1-3_amd64.deb" {
