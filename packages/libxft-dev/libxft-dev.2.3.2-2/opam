  "libfreetype6-dev"
  "libx11-dev" {>= "2-1.0.0"}
  "libxft2" {= "2.3.2-2"}
  "libxrender-dev"
  ("libc6-dev" | "libc-dev")
  ("zlib1g-dev" | "libz-dev")
]
extra-source "libxft-dev_2.3.2-2_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/x/xft/libxft-dev_2.3.2-2_amd64.deb"
}
