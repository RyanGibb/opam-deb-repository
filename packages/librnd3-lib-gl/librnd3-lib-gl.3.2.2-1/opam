opam-version: "2.0"
build: [
  ["sh" "-c" "sudo dpkg -i librnd3-lib-gl_3.2.2-1_amd64.deb"]
]
remove: [
  ["sh" "-c" "sudo dpkg -r librnd3-lib-gl"]
]
depends: [
  "libc6" {>= "2.4"}
  "libgl1"
  "librnd3" {= "3.2.2-1"}
  ("libglu1-mesa" | "libglu1")
]
extra-source "librnd3-lib-gl_3.2.2-1_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/libr/librnd/librnd3-lib-gl_3.2.2-1_amd64.deb"
}
